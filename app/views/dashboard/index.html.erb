<br/>
<%= form_with model: @document, url: "/documents", method: "POST", multipart: true, :id => "upload_form"  do |form| %>
<label for="file_upload" style="padding: 5px; margin-top: 15px; border-width: 2px; border: solid #000;">Upload Image</label>
<%= form.file_field :document, :onchange => "uploadFile()", :id => "file_upload", :style => "display:none; margin: 10px" %>
<% end %>


