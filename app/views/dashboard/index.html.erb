
<script>
  const uploadFile = (context) => {
    document.getElementById("upload_form").submit()
  }
</script>

<%= button_to 'Update Profile', edit_user_path(id: @user.id), method: :get%>
    <%= button_to "Logout", '/logout', method: :get%>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Upload Date</th>
      <th>Size</th>
      <th>Actions</th>
      <th>Sharing</th>
    </tr>
  </thead>
  <tbody>
<%= render @user.documents, shared_by: false %>
</tbody>
</table>


