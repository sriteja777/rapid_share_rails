<style>
#signup {
   display: inline;
}
</style>

<h1>Login</h1>
   <%= form_tag '/login', local: true do %>
   <%= label_tag :username%>
   <%= text_field_tag :username %><br/><br/>
   <%= label_tag :password%>
   <%= password_field_tag :password%><br/><br/>
   <%= @errors%>
   <br/>
   <%= submit_tag "Login"%>
<%end%>
   <div>
   <br/>
   <div style="display: inline;">Don't Have an account? <%= link_to "Sign up", new_user_path%></div>
   
   </div>

